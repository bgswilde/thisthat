
<div class="container d-flex flex-column justify-content-center my-auto vertical-center">
    {{#each questions as |question|}}
    <a id="this-card">
        {{> top-option question}}
    </a>

    <div class="image my-6">
        <img class= "resize-smaller" src="/images/thisthattext.png" alt="thisthat logo">
    </div>

    {{> bottom-option question}}
    {{/each}}
</div>

<div class="container justify-items-center">
    <button type="submit" class="next-question action">NEXT QUESTION</button>
</div>



<script src="/javascript/questions.js"></script>