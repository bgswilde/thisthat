<div class="container text-light">
  <h2 class="display-4 mt-2">Welcome to the Dashboard, {{username}}!</h2>
</div>

<div class="container text-light">
    <section id="add-thisthat" class="my-4 align-items-start">
        <h4>Get your ThisThat debate going!</h4>
        <a role="button" class="btn action my-1" href="../">Get Started!</a>
    </section>
    <section id="add-thisthat" class="my-4 align-items-start">
        <h4>Have a great idea for a ThisThat question?</h4>
        <a role="button" class="btn action mt-1" href="../create">Create a ThisThat</a>
    </section>
    <section id="add-thisthat" class="my-4 align-items-start">
      <h4>COMING SOON: your saved choices here!</h4>
      {{!-- <a role="button" class="btn action mt-1" href="../create">Create a ThisThat</a> --}}
      {{#each userChoices as |answer|}}
      <li>
        <article class="post">
          <div class="title">
            <span>{{answer.choice}}</span>
              {{#if answer.choice}}
                <h2>Question Title </h2>
                <span>{{answer.question.that_false}}</span>
                <span>{{answer.question.this_true}}</span>
                <h2>You Selected</h2>
                <span>{{answer.question.this_true}}</span>
              {{else}}
               <h2>Question Title </h2>
              <span>{{answer.question.that_false}}</span>
              <span>{{answer.question.this_true}}</span>
              <h2>You Selected</h2>
              <span>{{answer.question.that_false}}</span>
              {{/if}}
          </div>
        </article>
      </li>
      {{/each}}
    </section>
</div>


    